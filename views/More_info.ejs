<div class="container">
    
    <div class="row">
    <div class="col col-lg-3">
        <p class="lead">PicLogie</p>
        <div> 
            <li class="list-group-item active">3</li>
            <li class="list-group-item">2</li>
            <li class="list-group-item">1</li>
        </div>
    </div>
    <div class="col col-lg-9">
        <div class="thumbnail" style="background-color: rgb(240, 240, 240) ; border-radius: 2%; padding-top: 3px; margin-bottom: 0;" >
            <img src="<%= data[0].url %>" class="responsive" style="width: 100%; height: 50%; "> 
            <div class="caption-full">
                <h4 class="float-right">nice</h4>
                <h4  ><a href="#"><%= data[0].name %></a></h4>
                <div><p><span style="font-size: 20px;"><strong style="text-decoration: underline">Discreiption</strong>:- </span><%= data[0].description %></p></div>
                <div>
                <% if (currentUser){ %>
                <% if (currentUser.username == data[0].username){ %>
                   <a href="/<%= data[0]._id %>/edit"  class="btn  btn-xs btn-warning" style="margin-left: 5px;" >Edit </a>
                   <form method="POST" action="/<%= data[0]._id %>/delete?_method=DELETE" style="display: inline;">
                    <button   class="btn btn-danger btn-xs" >DELETE</button>
                   </form>
                <% } %>
                <% } %>
              </div>           
              </div>
        </div>
    </div> 
    </div>
    <div class="row">
        <div class="col col-log-3"></div>
     <div class="col col-lg-9" style="background-color: #dcdcdc ; border-radius: 8%;" >
     <h3 style="text-align:center;">Comments</h3>
     <% var c = data[0].comments; %>
     <div  >
     <% for(var i=0;i < c.length;i++) { %>
        <h6 class="float-right">10d ago</h4>
        <h6 ><strong><%= c[i].author %></strong><h6>
           <p><%= c[i].comment %></p>
           <% if (currentUser){ %>
            <% if (currentUser.username == data[0].username || currentUser.username == data[0].comments[i].author ){ %>
               <form method="POST" action="/comments/<%= data[0]._id %>/<%= data[0].comments[i]._id %>/delete?_method=DELETE" style="display: inline;">
                <button   class="btn btn-danger btn-xs" >DELETE</button>
               </form>
            <% } %>
            <% } %>
            <hr class="my-3">
     <% } %>
    </div>
    </div>
    </div>
    <form action="/comments/<%= data[0]._id %>" method="POST" style="margin-left: 15.7%;">
        <input type="text" name="comment" class="form-control form-control-lg" placeholder="comment" style="width: 30%; margin-left: 10%;">
        <input type="submit" class="btn btn-primary btn-block"  style="width: 30%; margin-left: 10%";>
     </form>
</div>

</body>
